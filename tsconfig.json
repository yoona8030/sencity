{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "bundler",   // ⬅️ RN 권장
    "lib": ["es2019", "dom"],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "src/types", "index.ts", "index.tsx"]
}