# 기본: 텍스트 자동 정규화
* text=auto

# 소스/설정 파일은 저장소에 LF로
*.js   text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.xml  text eol=lf
*.gradle text eol=lf
*.java text eol=lf
*.kt   text eol=lf
*.m    text eol=lf
*.mm   text eol=lf
*.swift text eol=lf
*.pbxproj text eol=lf
*.plist text eol=lf

# 바이너리는 줄바꿈 변환 금지
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.pdf binary
*.a binary
*.jar binary
*.keystore binary
*.so binary
*.ttf binary
*.otf binary
*.ico binary

# Gradle 래퍼: 스크립트는 LF, 배치는 CRLF
gradlew text eol=lf
gradlew.bat text eol=crlf
